{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "g++",
      "args": [
        "-std=c++17",
        "${file}",
        "-o",
        "../bin/${fileBasenameNoExtension}",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      // "group": {
      //   "kind": "build",
      //   "isDefault": true
      // },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "run",
      "command": "./bin/${fileBasenameNoExtension}",
      "dependsOn": [
        "C/C++: g++ build active file"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}